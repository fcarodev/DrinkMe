<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>


    <style name="normalMaterialButtonCircle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">#fff</item>
        <item name="cornerRadius">32dp</item>
        <item name="iconTint">#000</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">#979797</item>
        <item name="iconGravity">textStart</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="textTitleActivity">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>