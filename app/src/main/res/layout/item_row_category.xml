<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/imgCategoryRecycler"
        style="@style/normalMaterialButtonCircle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="4dp"
        android:layout_margin="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCategoryNameRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        style="@style/textTitleActivity"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imgCategoryRecycler"
        app:layout_constraintStart_toStartOf="@+id/imgCategoryRecycler"
        app:layout_constraintTop_toBottomOf="@+id/imgCategoryRecycler" />
</androidx.constraintlayout.widget.ConstraintLayout>